## All aliases are defined here

alias ...="cd  ~/.dotfiles"

# basic
alias c="clear"
alias cp='cp -i'
alias du='du -h -d1'
alias grep='grep --color=auto'
alias l='ls'
alias la='ls -a'
alias less='less -R'
alias ll='ls -l'
alias lla='ls -la'
alias lt='ls --tree'
alias me="echo `whoami`@`hostname`"
alias mv='mv -i'
alias q="exit"
alias sl='ls'

# nvim
if command -v nvim &> /dev/null ; then
    alias vim="nvim"
    alias vi="nvim"
fi

# open
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    alias open="xdg-open"
fi
