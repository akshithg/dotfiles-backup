
alias ...="cd  ~/.dotfiles"
alias me="echo `whoami`@`hostname`"
alias c="clear"
alias q="exit"
alias less="less -R"
alias sl=ls
alias vim="nvim"


# ls
alias l='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'


# gdb
alias gdb="gdb -q"

# open
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    alias open="xdg-open"
fi

