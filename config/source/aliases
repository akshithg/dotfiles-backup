alias v="vim"
alias grep="grep --color"

# ls
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    color="--color=auto"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    color="-G"
fi

alias ls="ls $color"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"
alias c="clear"

# python
alias python="python3"
alias pip="pip3"

# tmux
alias t="tmux attach || tmux new-session \; split-window -v \; split-window -h"
alias tl="tmux list-sessions"
alias ta="tmux attach -t"
alias tn="tmux new-session"

