
alias ...="cd  ~/.dotfiles"
alias me="echo `whoami`@`hostname`"
alias c="clear"
alias q="exit"
alias less="less -R"
alias vim="nvim"


# disk space
alias du="du -h -d1"


# ls
alias l='ls'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias lt='ls --tree'
alias sl='ls'

# gdb
alias gdb="gdb -q"

# open
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    alias open="xdg-open"
fi

